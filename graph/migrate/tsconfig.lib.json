{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "composite": true,
    "noEmit": false
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../ui-project-details/tsconfig.lib.json"
    },
    {
      "path": "../ui-common/tsconfig.lib.json"
    }
  ],
  "files": [
    "../../packages/react/typings/cssmodule.d.ts",
    "../../packages/react/typings/image.d.ts"
  ]
}
