{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/graph/ui-theme",
    "tsBuildInfoFile": "../../dist/out-tsc/graph/ui-theme/tsconfig.lib.tsbuildinfo",
    "declaration": true,
    "types": ["node"],
    "composite": true,
    "noEmit": false
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "files": [
    "../../packages/react/typings/cssmodule.d.ts",
    "../../packages/react/typings/image.d.ts"
  ]
}
