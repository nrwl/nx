{
  "$schema": "packages/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "master"
  },
  "npmScope": "nrwl",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "accessToken": "YzVhYjFiNzAtYTYxZS00OWM3LTlkOGYtZjRmOGRlNDY4MTJhfHJlYWQtd3JpdGU=",
        "cacheableOperations": [
          "build",
          "build-base",
          "test",
          "lint",
          "lint-base",
          "e2e",
          "sitemap"
        ],
        "useDaemonProcess": true,
        "cacheDirectory": "/tmp/nx-cache",
        "parallel": 1
      }
    }
  },
  "workspaceLayout": {
    "libsDir": "",
    "appsDir": ""
  },
  "namedInputs": {
    "prod": ["!**/*.spec.ts"],
    "globals": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/.circleci/config.yml"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["build-base"],
      "inputs": ["prod", "^prod", "globals"]
    },
    "build-base": {
      "dependsOn": ["^build-base"],
      "inputs": ["prod", "^prod", "globals"]
    },
    "test": {
      "inputs": ["default", "^prod", "globals"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/tools/eslint-rules/**/*",
        "globals"
      ]
    },
    "e2e": {
      "inputs": [
        "default",
        "^prod",
        "globals",
        {
          "env": "SELECTED_CLI"
        },
        {
          "env": "NX_E2E_CI_CACHE_KEY"
        }
      ]
    }
  }
}
