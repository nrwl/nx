{
  "$schema": "packages/nx/schemas/nx-schema.json",
  "implicitDependencies": {
    "package.json": "*",
    ".eslintrc.json": "*",
    ".circleci/config.yml": "*",
    "tools/eslint-rules/**/*": "*"
  },
  "affected": {
    "defaultBase": "master"
  },
  "npmScope": "nrwl",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "build-base",
          "test",
          "lint",
          "lint-base",
          "e2e",
          "sitemap"
        ],
        "useDaemonProcess": true,
        "runtimeCacheInputs": [
          "echo $SELECTED_CLI",
          "echo $NX_E2E_CI_CACHE_KEY"
        ],
        "cacheDirectory": "/tmp/nx-cache",
        "parallel": 1
      }
    }
  },
  "workspaceLayout": {
    "libsDir": "",
    "appsDir": ""
  },
  "namedInputs": {
    "prod": ["!**/*.spec.ts"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["build-base"],
      "inputs": ["prod", "^prod"]
    },
    "build-base": {
      "dependsOn": ["^build-base"],
      "inputs": ["prod", "^prod"]
    },
    "test": {
      "inputs": ["default", "^prod"]
    },
    "e2e": {
      "inputs": ["default", "^prod"]
    }
  }
}
