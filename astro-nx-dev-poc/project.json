{
  "name": "astro-nx-dev-poc",
  "targets": {
    "comment": "package.json#scripts runs in the project root directory with astro assumes is where the node_modules is. which fails. so run the scripts in project.json#targets with --root command instead",
    "serve": {
      "dependsOn": [
        {
          "projects": [
            "devkit",
            "create-nx-workspace"
          ],
          "target": "build"
        }
      ],
      "command": "astro dev --root=astro-nx-dev-poc"
    },
    "build": {
      "dependsOn": [
        {
          "projects": [
            "devkit",
            "create-nx-workspace"
          ],
          "target": "build"
        }
      ],
      "command": "astro build --root=astro-nx-dev-poc"
    },
    "astro": {
      "command": "astro --root=astro-nx-dev-poc"
    }
  }
}
