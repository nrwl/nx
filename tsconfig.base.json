{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2022"],
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "composite": true,
    "declarationMap": true
  }
}
