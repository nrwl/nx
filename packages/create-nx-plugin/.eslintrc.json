{
  "extends": "../../.eslintrc.json",
  "rules": {
    "no-restricted-imports": [
      "error",
      "@nx/workspace",
      "@angular-devkit/core",
      "@angular-devkit/architect",
      "@angular-devkit/schematics",
      "nx",
      "@nx/devkit"
    ]
  },
  "ignorePatterns": ["!**/*", "node_modules"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "name": "chalk",
            "message": "Please use native `styleText` in place of `chalk` for rendering terminal colors"
          },
          {
            "name": "picocolors",
            "message": "Please use native `styleText` in place of `picocolors` for rendering terminal colors"
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["./package.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "buildTargets": ["build-base"],
            "ignoredDependencies": []
          }
        ]
      }
    }
  ]
}
