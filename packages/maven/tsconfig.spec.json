{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/maven/spec",
    "types": ["jest", "node"],
    "composite": true
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.d.ts",
    "jest.config.ts",
    "*.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "../nx"
    }
  ]
}
