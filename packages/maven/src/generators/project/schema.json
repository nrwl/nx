{
  "$schema": "https://json-schema.org/schema",
  "id": "MavenProject",
  "title": "Generate Maven project", 
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the project?"
    },
    "directory": {
      "type": "string",
      "description": "Directory where the project is placed"
    },
    "groupId": {
      "type": "string",
      "description": "Maven group ID",
      "default": "com.example",
      "x-prompt": "What group ID would you like to use?"
    },
    "artifactId": {
      "type": "string",
      "description": "Maven artifact ID",
      "x-prompt": "What artifact ID would you like to use?"
    },
    "version": {
      "type": "string",
      "description": "Project version",
      "default": "1.0-SNAPSHOT"
    },
    "packaging": {
      "type": "string",
      "description": "Maven packaging type",
      "default": "jar",
      "enum": ["jar", "war", "pom"]
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "groupId", "artifactId"]
}