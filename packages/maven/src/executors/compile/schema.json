{
  "$schema": "https://json-schema.org/schema",
  "type": "object",
  "properties": {
    "cwd": {
      "type": "string",
      "description": "Current working directory for the Maven command"
    },
    "goals": {
      "type": "array",
      "description": "Maven goals to execute",
      "default": ["compile"],
      "items": {
        "type": "string"
      }
    },
    "options": {
      "type": "array",
      "description": "Additional Maven options",
      "items": {
        "type": "string"
      }
    }
  }
}