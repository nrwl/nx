{
  "$schema": "http://json-schema.org/schema",
  "id": "NxNextNgInit",
  "title": "Add Nx Next Schematics",
  "type": "object",
  "properties": {
    "unitTestRunner": {
      "description": "Adds the specified unit test runner",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "e2eTestRunner": {
      "description": "Adds the specified e2e test runner",
      "type": "string",
      "enum": ["cypress", "none"],
      "default": "cypress"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
