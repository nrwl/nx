{
  "name": "dotnet",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dotnet/src",
  "projectType": "library",
  "tags": [],
  "release": {
    "version": {
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": ["packages/{projectName}"]
    }
  },
  "targets": {
    "build": {
      "command": "node ./scripts/copy-readme.js dotnet packages/dotnet/README.md__tmpl__ packages/dotnet/README.md",
      "outputs": ["{projectRoot}/README.md"]
    },
    "build-analyzer": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist/lib"],
      "options": {
        "commands": [
          "dotnet publish {projectRoot}/analyzer/MsbuildAnalyzer.csproj -c Release -o {projectRoot}/dist/lib --self-contained false",
          "node scripts/chmod.js {projectRoot}/dist/lib/MsbuildAnalyzer"
        ],
        "parallel": false
      }
    },
    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "dependsOn": ["build-analyzer"],
      "outputs": ["{projectRoot}/dist/**", "!{projectRoot}/dist/lib/**"],
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "outputPath": "dist",
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "{projectRoot}/src",
            "glob": "**/*.{d.ts,json}",
            "output": "/",
            "ignore": [
              ".eslintrc.json",
              "generators.json",
              "executors.json",
              "migrations.json"
            ]
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "packages/dotnet"
      },
      "dependsOn": ["^nx-release-publish"]
    }
  }
}
