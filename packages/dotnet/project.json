{
  "name": "dotnet",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dotnet/src",
  "projectType": "library",
  "tags": [],
  "release": {
    "version": {
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": ["packages/{projectName}"]
    }
  },
  "targets": {
    "build": {
      "command": "node ./scripts/copy-readme.js dotnet packages/dotnet/README.md__tmpl__ packages/dotnet/README.md",
      "outputs": ["{projectRoot}/README.md"]
    },
    "build-analyzer": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/src/lib"],
      "options": {
        "commands": [
          "dotnet publish {projectRoot}/analyzer/MsbuildAnalyzer.csproj -c Release -o {projectRoot}/src/lib --self-contained false"
        ],
        "parallel": false
      }
    },
    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "dependsOn": ["build-analyzer"],
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "${projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "{projectRoot}",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "{projectRoot}",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "{projectRoot}",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "{projectRoot}",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "packages/dotnet"
      },
      "dependsOn": ["^nx-release-publish"]
    }
  }
}
