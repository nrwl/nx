{
  "name": "remix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remix/src",
  "projectType": "library",
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/packages/remix/README.md"],
      "command": "node ./scripts/copy-readme.js remix",
      "dependsOn": ["^build", "build-base-ts", "legacy-post-build"]
    },

    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          "packages/remix/*.md",
          {
            "input": "./packages/remix/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/remix/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/remix",
            "glob": "**.json",
            "output": ".",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"]
          },
          "LICENSE"
        ]
      },
      "dependsOn": ["build-base-ts"]
    }
  },
  "tags": []
}
