{
  "name": "remix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/remix/src",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "copy-readme": {
      "outputs": ["{workspaceRoot}/dist/packages/remix/README.md"],
      "command": "node ./scripts/copy-readme.js remix",
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "build-base": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base-ts",
          "projects": "self"
        },
        {
          "target": "legacy-post-build",
          "projects": "self"
        },
        {
          "target": "copy-readme",
          "projects": "self"
        }
      ]
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/packages/remix"
      },
      "dependsOn": ["^nx-release-publish"]
    },
    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          "packages/remix/*.md",
          {
            "input": "./packages/remix/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/remix/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/remix",
            "glob": "**.json",
            "output": ".",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"]
          },
          "LICENSE"
        ]
      },
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    }
  },
  "tags": []
}
