    },
    {
      "path": "../web/tsconfig.lib.json"
    },
    {
      "path": "../devkit/tsconfig.lib.json"
    },
    {
      "path": "../js/tsconfig.lib.json"
    },
    {
      "path": "../nest/tsconfig.lib.json"
    },
    {
      "path": "../nx/tsconfig.lib.json"
    }
  ]
