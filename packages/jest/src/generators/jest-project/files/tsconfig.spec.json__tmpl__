{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offsetFromRoot %>dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"]
  },<% if(setupFile !== 'none') { %>
  "files": ["src/test-setup.ts"],<% } %>
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",<% if (supportTsx) { %>
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",<% } %>
    "**/*.d.ts"
  ]
}
