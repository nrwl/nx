{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declarationDir": ".",
    "declarationMap": false,
    "types": ["node"],
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "composite": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "internal-testing-utils.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "src/generators/test-files/**"
  ],
  "include": [
    "index.ts",
    "public-api.ts",
    "internal.ts",
    "testing.ts",
    "ngcli-adapter.ts",
    "internal-testing-utils.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "package.json",
    "migrations.json"
  ],
  "references": [
    {
      "path": "../nx/tsconfig.lib.json"
    }
  ]
}
