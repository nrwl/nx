{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "types": ["node"],
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "rootDir": "./src"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "internal-testing-utils.ts",
    "jest.config.ts",
    "dist"
  ],
  "include": ["**/*.ts", "*.json", "migrations.json"],
  "references": [
    {
      "path": "../nx/tsconfig.lib.json"
    }
  ]
}
