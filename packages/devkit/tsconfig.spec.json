{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/devkit/spec",
    "module": "commonjs",
    "types": ["jest", "node"],
    "composite": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.d.ts",
    "internal-testing-utils.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "src/**/*.ts",
    "*.json",
    "migrations.json"
  ],
  "references": [
    {
      "path": "../nx"
    },
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
