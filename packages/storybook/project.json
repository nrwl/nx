{
  "name": "storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/storybook",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "copy-readme": {
      "outputs": ["{workspaceRoot}/dist/packages/storybook/README.md"],
      "command": "node ./scripts/copy-readme.js storybook",
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "build-base": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base-ts",
          "projects": "self"
        },
        {
          "target": "legacy-post-build",
          "projects": "self"
        },
        {
          "target": "copy-readme",
          "projects": "self"
        }
      ]
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/packages/storybook"
      },
      "dependsOn": ["^nx-release-publish"]
    },
    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/storybook",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "packages/storybook",
            "glob": "**/project-files/.storybook/**",
            "output": "/"
          },
          {
            "input": "packages/storybook",
            "glob": "**/project-files-ts/.storybook/**",
            "output": "/"
          },
          {
            "input": "packages/storybook",
            "glob": "**/*.json",
            "ignore": [
              "**/tsconfig*.json",
              "project.json",
              ".eslintrc.json",
              "**/test-configs/**"
            ],
            "output": "/"
          },
          {
            "input": "packages/storybook",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/storybook",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    }
  }
}
