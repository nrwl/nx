{
  "name": "angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular",
  "projectType": "library",
  "targets": {
    "build-ng": {
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ],
      "executor": "@nx/angular:package",
      "options": {
        "project": "packages/angular/ng-package.json"
      },
      "outputs": ["{workspaceRoot}/dist/packages/angular"]
    },
    "build-base": {
      "executor": "@nx/js:tsc"
    },
    "copy-assets": {
      "executor": "@nx/workspace-plugin:copy-assets",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/angular",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "packages/angular",
            "glob": "**/creator-files/**",
            "output": "/"
          },
          {
            "input": "packages/angular",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/angular",
            "glob": "**/*.json",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"],
            "output": "/"
          },
          {
            "input": "packages/angular",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/angular",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base",
          "projects": "self"
        },
        {
          "target": "build-ng",
          "projects": "self"
        },
        {
          "target": "copy-assets",
          "projects": "self"
        }
      ],
      "outputs": ["{workspaceRoot}/dist/packages/angular/README.md"],
      "command": "node ./scripts/copy-readme.js angular"
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/packages/angular"
      },
      "dependsOn": ["^nx-release-publish"]
    }
  },
  "implicitDependencies": ["!@nx/cypress"]
}
