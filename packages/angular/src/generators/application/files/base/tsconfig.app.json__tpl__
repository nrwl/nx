{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= rootOffset %>dist/out-tsc",
    "types": []
  },
  <%_ if (angularMajorVersion < 20) { _%>
  "files": ["src/main.ts"],
  "include": ["src/**/*.d.ts"],
  <%_ } else { _%>
  "include": ["src/**/*.ts"],
  <%_ } _%>
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
