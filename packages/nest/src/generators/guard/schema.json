{
  "$schema": "https://json-schema.org/schema",
  "$id": "NxNestGuardGenerator",
  "title": "Nest Guard Options Schema",
  "description": "Nest Guard Options Schema.",
  "cli": "nx",
  "type": "object",
  "properties": {
    "path": {
      "description": "The file path to the guard without the file extension and suffix (e.g. `my-app/src/app/my-guard/my-guard` generates the file `my-app/src/app/my-guard/my-guard.guard.ts`). Relative to the current working directory.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the guard file path?"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "unitTestRunner": {
      "description": "Test runner to use for unit tests.",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "language": {
      "description": "Nest guard language.",
      "type": "string",
      "enum": ["js", "ts"]
    }
  },
  "additionalProperties": false,
  "required": ["path"]
}
