{
    "name": "@fluffjs/fluff",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "@fluffjs/source": "./src/index.ts",
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "!**/*.tsbuildinfo"
    ],
    "dependencies": {},
    "nx": {
        "targets": {
            "lint": {
                "executor": "@nx/eslint:lint",
                "options": {
                    "fix": true
                }
            },
            "build": {
                "executor": "nx:run-commands",
                "outputs": [
                    "{projectRoot}/dist"
                ],
                "options": {
                    "commands": [
                        "tsc --noEmit -p tsconfig.spec.json",
                        "tsc --build tsconfig.lib.json",
                        "node scripts/copy-package-json.mjs"
                    ],
                    "cwd": "{projectRoot}",
                    "parallel": false
                }
            },
            "test": {
                "executor": "@nx/vitest:test",
                "outputs": [
                    "{options.reportsDirectory}"
                ],
                "options": {
                    "reportsDirectory": "../../coverage/packages/fluff"
                }
            }
        }
    }
}
