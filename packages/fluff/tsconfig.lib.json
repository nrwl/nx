{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": false,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "declarationMap": false,
        "types": [
            "node"
        ],
        "lib": [
            "ES2022",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [],
    "exclude": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx"
    ]
}
