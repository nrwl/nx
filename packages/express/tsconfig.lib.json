{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declarationDir": ".",
    "declarationMap": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types": ["node"],
    "composite": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "jest.config.ts",
    "jest.config.cts",
    "**/__fixtures__/**/*.*",
    "**/__snapshots__/**/*.*"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "package.json",
    "generators.json",
    "migrations.json"
  ],
  "references": [
    {
      "path": "../devkit/tsconfig.lib.json"
    },
    {
      "path": "../js/tsconfig.lib.json"
    },
    {
      "path": "../node/tsconfig.lib.json"
    }
  ]
}
