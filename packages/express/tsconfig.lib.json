{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "./dist",
    "types": ["node"],
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "moduleResolution": "nodenext",
    "rootDir": "./src"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "jest.config.ts",
    "jest.config.cts",
    "dist"
  ],
  "include": ["**/*.ts", "**/*.json"],
  "references": [
    {
      "path": "../devkit/tsconfig.lib.json"
    },
    {
      "path": "../js/tsconfig.lib.json"
    },
    {
      "path": "../node/tsconfig.lib.json"
    }
  ]
}
