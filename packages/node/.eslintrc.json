{
  "extends": "../../.eslintrc",
  "rules": {},
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["**/*.ts"],
      "excludedFiles": ["./src/migrations/**"],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@nx/workspace",
          "@angular-devkit/core",
          "@angular-devkit/architect",
          "@angular-devkit/schematics"
        ]
      }
    },
    {
      "files": ["./package.json", "./generators.json", "./migrations.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/nx-plugin-checks": "error"
      }
    }
  ]
}
