{
  "extends": "../../.eslintrc",
  "rules": {},
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["packages/node/tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["**/*.ts"],
      "excludedFiles": ["./src/migrations/**"],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@nrwl/workspace",
          "@angular-devkit/core",
          "@angular-devkit/architect",
          "@angular-devkit/schematics"
        ]
      }
    }
  ]
}
