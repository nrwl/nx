{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/nx/spec",
    "types": ["jest", "node"],
    "composite": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/__fixtures__/**/*.ts",
    "**/*.fixture.ts",
    "**/*.d.ts",
    "./src/internal-testing-utils/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "*.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
