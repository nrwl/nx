{
    "name": "@fluffjs/nx",
    "version": "0.0.1",
    "private": true,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "executors": "./executors.json",
    "generators": "./generators.json",
    "repository": {
        "type": "git",
        "url": "https://github.com/fluffjs/fluff.git",
        "directory": "packages/nx"
    },
    "nx": {
        "targets": {
            "lint": {
                "executor": "@nx/eslint:lint",
                "options": {
                    "fix": true
                }
            },
            "build-internal": {
                "executor": "nx:run-commands",
                "outputs": [
                    "{projectRoot}/dist"
                ],
                "options": {
                    "commands": [
                        "tsc --build tsconfig.lib.json",
                        "node scripts/copy-assets.mjs",
                        "node scripts/copy-package-json.mjs"
                    ],
                    "cwd": "{projectRoot}",
                    "parallel": false
                }
            },
            "build": {
                "executor": "nx:run-commands",
                "dependsOn": ["lint", "build-internal", "nx-e2e:e2e"],
                "outputs": [
                    "{projectRoot}/dist"
                ],
                "options": {
                    "command": "echo 'Build complete'"
                }
            }
        }
    },
    "dependencies": {
        "@fluffjs/cli": "0.0.3",
        "@nx/devkit": "^21.0.0",
        "tslib": "^2.3.0"
    },
    "peerDependencies": {
        "nx": ">=19.0.0"
    }
}
