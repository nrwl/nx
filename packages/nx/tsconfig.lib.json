{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declarationDir": ".",
    "declarationMap": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types": ["node"],
    "composite": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*_spec.ts",
    "jest.config.ts",
    "**/__fixtures__/**/*.*",
    "./src/internal-testing-utils/**/*.ts"
  ],
  "include": ["**/*.ts", "**/*.json", "migrations.json"]
}
