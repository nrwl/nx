{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2022",
        "lib": ["es2022"],
        "strict": true,
        "skipLibCheck": true,
        "composite": true,
        "importHelpers": true,
        "types": [
            "node"
        ],
        "paths": {
            "@fluffjs/cli": ["../cli/src/index.ts"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        { "path": "../cli/tsconfig.lib.json" }
    ]
}
