{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declarationDir": ".",
    "declarationMap": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "types": ["node"],
    "composite": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*_spec.ts",
    "jest.config.ts",
    "**/__fixtures__/**/*.*",
    "./src/internal-testing-utils/**/*.ts",
    ".eslintrc.json"
  ],
  "include": [
    "bin/**/*.ts",
    "plugins/**/*.ts",
    "release/**/*.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "tasks-runners/**/*.ts"
  ]
}
