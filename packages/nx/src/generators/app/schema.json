{
    "$schema": "https://json-schema.org/schema",
    "id": "FluffAppGenerator",
    "title": "Fluff Application Generator",
    "description": "Creates a new Fluff application",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the application",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use for the application?"
        },
        "directory": {
            "type": "string",
            "description": "The directory to create the application in",
            "default": "apps"
        },
        "packageManager": {
            "type": "string",
            "description": "Package manager to use for installing dependencies",
            "enum": ["npm", "yarn", "pnpm", "bun"]
        },
        "skipInstall": {
            "type": "boolean",
            "description": "Skip installing dependencies",
            "default": false
        }
    },
    "required": ["name"]
}
