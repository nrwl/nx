{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/eslint-plugin/spec",
    "module": "commonjs",
    "composite": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.d.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
