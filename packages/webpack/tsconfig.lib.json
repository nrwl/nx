{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declarationDir": ".",
    "declarationMap": false,
    "types": ["node"],
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "composite": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__fixtures__/**/*.*",
    "**/__snapshots__/**/*.*"
  ],
  "references": [
    {
      "path": "../js/tsconfig.lib.json"
    },
    {
      "path": "../nx/tsconfig.lib.json"
    },
    {
      "path": "../devkit/tsconfig.lib.json"
    }
  ]
}
