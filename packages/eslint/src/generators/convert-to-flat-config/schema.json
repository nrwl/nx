{
  "$schema": "https://json-schema.org/schema",
  "$id": "ConvertToFlatConfig",
  "cli": "nx",
  "description": "Convert an Nx workspace's ESLint configs to use Flat Config.",
  "type": "object",
  "properties": {
    "skipFormat": {
      "type": "boolean",
      "description": "Skip formatting files.",
      "default": false,
      "x-priority": "internal"
    },
    "eslintConfigFormat": {
      "type": "string",
      "description": "The format of the ESLint configuration file",
      "enum": ["cjs", "mjs"],
      "default": "mjs"
    }
  },
  "additionalProperties": false,
  "required": []
}
