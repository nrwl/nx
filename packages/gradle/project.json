{
  "name": "gradle",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gradle/src",
  "projectType": "library",
  "targets": {
    "nx-release-publish": {
      "dependsOn": ["^nx-release-publish"],
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "packages/gradle"
      }
    },
    "build": {
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/scripts/copy-readme.js",
        "{projectRoot}/readme-template.md"
      ],
      "outputs": [
        "{projectRoot}/dist/**/*.{js,mjs,cjs}",
        "{projectRoot}/README.md"
      ],
      "command": "node ./scripts/copy-readme.js gradle packages/gradle/readme-template.md packages/gradle/README.md",
      "dependsOn": ["^build", "build-native", "build-base", "legacy-post-build"]
    },
    "build-base": {
      "dependsOn": [
        "^build-base",
        "build-native",
        "gradle-batch-runner:assemble"
      ]
    },
    "legacy-post-build": {
      "executor": "@nx/workspace-plugin:legacy-post-build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "main": "./index.js",
        "types": "./index.d.ts",
        "tsConfig": "./tsconfig.lib.json",
        "outputPath": "./dist",
        "sourceRoot": "./src",
        "assets": [
          {
            "input": "packages/gradle",
            "glob": "**/@(files|files-angular)/**",
            "output": "/"
          },
          {
            "input": "packages/gradle",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/gradle",
            "glob": "**/*.json",
            "ignore": [
              "**/tsconfig*.json",
              "project.json",
              ".eslintrc.json",
              "executors.json",
              "generators.json",
              "migrations.json",
              "package.json"
            ],
            "output": "/"
          },
          {
            "input": "packages/gradle",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/gradle/batch-runner",
            "glob": "**/*.jar",
            "output": "/batch-runner"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["gradle-project-graph"]
}
