{
  "extends": "../../.eslintrc",
  "rules": {},
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "**/*.ts"
      ],
      "excludedFiles": [
        "./src/migrations/**",
        "./src/utils/**"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          "@nrwl/workspace",
          "@angular-devkit/core",
          "@angular-devkit/architect",
          "@angular-devkit/schematics"
        ]
      }
    },
    {
      "files": [
        "./package.json",
        "./generators.json",
        "./executors.json",
        "./migrations.json"
      ],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nrwl/nx/nx-plugin-checks": "error"
      }
    }
  ],
  "ignorePatterns": [
    "!**/*"
  ]
}
