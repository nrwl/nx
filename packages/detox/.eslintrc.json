{
  "extends": "../../.eslintrc.json",
  "rules": {},
  "ignorePatterns": ["!**/*", "node_modules"],
  "overrides": [
    {
      "files": [
        "./package.json",
        "./generators.json",
        "./executors.json",
        "./migrations.json"
      ],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/nx-plugin-checks": "error"
      }
    },
    {
      "files": ["./package.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "buildTargets": ["build-base"],
            "ignoredDependencies": ["nx", "typescript", "detox"]
          }
        ]
      }
    }
  ]
}
