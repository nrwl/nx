{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": false,
        "outDir": "./dist",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "@fluffjs/fluff": [
                "../../packages/fluff/dist/index.js"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../../packages/fluff"
        }
    ]
}
