{
    "version": "1.0",
    "targets": {
        "app": {
            "name": "fluff-demo-app",
            "srcDir": "src",
            "outDir": "dist",
            "indexHtml": "index.html",
            "styles": [
                "styles.css"
            ],
            "assets": [
                "**/*.html"
            ],
            "bundle": {
                "minify": true,
                "gzip": true,
                "target": "es2022"
            },
            "serve": {
                "port": 3000,
                "host": "localhost"
            }
        }
    },
    "defaultTarget": "app"
}