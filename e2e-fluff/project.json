{
    "name": "fluff-e2e",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "e2e-fluff/src",
    "implicitDependencies": [
        "@fluffjs/fluff",
        "@fluffjs/cli"
    ],
    "targets": {
        "playwright-install": {
            "command": "npx playwright install",
            "options": {
                "cwd": "e2e-fluff"
            }
        },
        "build": {
            "dependsOn": ["@fluffjs/fluff:build-internal"],
            "command": "rm -rf dist && node ../packages/cli/dist/bin.js build",
            "options": {
                "cwd": "e2e-fluff"
            }
        },
        "e2e": {
            "dependsOn": ["playwright-install", "build"],
            "command": "npx playwright test --config=playwright.config.ts",
            "options": {
                "cwd": "e2e-fluff"
            }
        }
    }
}
