{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@fluffjs/fluff": [
                "../packages/fluff/src/index.ts"
            ],
            "@fluffjs/fluff/*": [
                "../packages/fluff/src/*"
            ]
        },
        "outDir": "dist",
        "rootDir": ".."
    },
    "include": [
        "src/**/*.ts",
        "../packages/fluff/src/types/component.d.ts"
    ]
}
